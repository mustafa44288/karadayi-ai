function run() {
  const q = document.getElementById("q").value.trim();
  if (!q) return;

  const imgBox = document.getElementById("images");
  const shopBox = document.getElementById("shop");

  imgBox.innerHTML = "";
  shopBox.innerHTML = "";

  // Her kelime iÃ§in 6 adet gÃ¶rsel
  for (let i = 1; i <= 6; i++) {
    const img = document.createElement("img");
    img.src = `https://source.unsplash.com/600x400/?${encodeURIComponent(q)}&sig=${i}`;
    img.alt = q;
    imgBox.appendChild(img);
  }

  // Her kelime iÃ§in 4 adet alÄ±ÅŸveriÅŸ Ã¼rÃ¼nÃ¼
  for (let i = 1; i <= 4; i++) {
    const card = document.createElement("div");
    card.className = "card";
    card.innerHTML = `
      <h3>${q.toUpperCase()} ÃœrÃ¼n ${i}</h3>
      <img src="https://source.unsplash.com/400x300/?${encodeURIComponent(q)},product&sig=${i+10}">
      <p>â‚º${Math.floor(Math.random()*15000)+500}</p>
      <button>SatÄ±n Al</button>
    `;
    shopBox.appendChild(card);
  }
}

